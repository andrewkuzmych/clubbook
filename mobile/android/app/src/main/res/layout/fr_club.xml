<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_screen_grey_light"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/holderScreen"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/holderClubInfo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/selector_bg_btn_white"
                android:orientation="horizontal"
                android:paddingLeft="16dp"
                android:paddingRight="4dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp">

                <ImageView
                    android:id="@+id/imgAvatar"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_gravity="center_vertical"
                    android:scaleType="fitCenter" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="16dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.nl.clubbook.ui.view.HelveticaRegularTextView
                        android:id="@+id/txtClubName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:textColor="@color/grey_club_title_text_color"
                        android:textSize="@dimen/text_size_medium" />

                    <com.nl.clubbook.ui.view.HelveticaRegularTextView
                        android:id="@+id/txtOpenToday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="@string/open_today"
                        android:textColor="@color/grey_club_title_text_color"
                        android:textSize="@dimen/text_size_micro" />

                    <com.nl.clubbook.ui.view.HelveticaRegularTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="4dp"
                        android:drawableRight="@drawable/ic_club_arrow_right"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:text="@string/info_and_wall"
                        android:textColor="@color/grey_club_title_text_color"
                        android:textSize="@dimen/text_size_micro" />

                </LinearLayout>

            </LinearLayout>

            <!--<com.nl.clubbook.ui.view.HelveticaRegularTextView-->
                <!--android:id="@+id/txtDistance"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="match_parent"-->
                <!--android:layout_gravity="center_vertical"-->
                <!--android:background="@drawable/selector_bg_btn_white"-->
                <!--android:drawablePadding="4dp"-->
                <!--android:drawableTop="@drawable/ic_navigation"-->
                <!--android:gravity="center"-->
                <!--android:paddingLeft="8dp"-->
                <!--android:paddingRight="16dp"-->
                <!--android:paddingBottom="16dp"-->
                <!--android:paddingTop="16dp"-->
                <!--android:textColor="@color/green"-->
                <!--android:textSize="@dimen/text_size_small" />-->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingRight="8dp"
                android:paddingLeft="8dp">

                <TextView
                    android:id="@+id/txtStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/green"
                    android:textSize="@dimen/text_size_small"
                    android:paddingTop="8dp"/>

                <com.nl.clubbook.ui.view.HelveticaBoldTextView
                    android:id="@+id/txtDistance"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/selector_bg_btn_white"
                    android:drawablePadding="4dp"
                    android:drawableTop="@drawable/ic_navigation"
                    android:gravity="center"
                    android:textSize="@dimen/text_size_small"
                    android:paddingBottom="4dp"
                    android:paddingRight="8dp"
                    android:paddingLeft="8dp"
                    android:paddingTop="4dp"
                    android:textColor="@color/grey"/>

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="horizontal"
            android:paddingBottom="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="16dp"
            android:paddingTop="8dp">

            <com.nl.clubbook.ui.view.HelveticaRegularTextView
                android:id="@+id/txtCheckInCount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_checked_in_club_details"
                android:drawablePadding="-4dp"
                android:gravity="center_vertical"
                android:text="@string/checked_in"
                android:textColor="@color/grey_light"
                android:textSize="@dimen/txt_check_in_users_size" />

            <com.nl.clubbook.ui.view.HelveticaRegularTextView
                android:id="@+id/txtFriendsCount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_friends_club_details"
                android:drawablePadding="4dp"
                android:gravity="center_vertical"
                android:text="@string/friends"
                android:textColor="@color/grey_light"
                android:textSize="@dimen/txt_check_in_users_size" />

            <com.nl.clubbook.ui.view.HelveticaRegularTextView
                android:id="@+id/txtCheckIn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@drawable/bg_btn_green"
                android:gravity="center"
                android:paddingBottom="4dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="4dp"
                android:text="@string/check_in"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size_medium" />

        </LinearLayout>

        <GridView
            android:id="@+id/gridUsers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:numColumns="@integer/grid_users_column_count"
            android:scrollbars="none"/>

        <RelativeLayout
            android:id="@+id/holderCheckInExplanation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <com.nl.clubbook.ui.view.HelveticaBoldTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:text="@string/no_users_checked_in_yet"
                android:textColor="@color/grey"
                android:textSize="@dimen/text_size_medium"
                android:layout_centerInParent="true"/>

        </RelativeLayout>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />

</RelativeLayout>

