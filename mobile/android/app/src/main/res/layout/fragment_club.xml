<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_screen_grey_light"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/holderScreen"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/holderClubInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_bg_btn_white"
            android:orientation="horizontal"
            android:padding="16dp">

            <com.nl.clubbook.ui.view.CircleImageView
                android:id="@+id/imgAvatar"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_gravity="center_vertical"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="16dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.nl.clubbook.ui.view.TitilliumRegularTextView
                    android:id="@+id/txtClubName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="Test"
                    android:textColor="@color/grey_club_title_text_color"
                    android:textSize="@dimen/text_size_medium" />

                <com.nl.clubbook.ui.view.TitilliumRegularTextView
                    android:id="@+id/txtOpenToday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="@string/open_today"
                    android:textColor="@color/grey_club_title_text_color"
                    android:textSize="@dimen/text_size_micro" />

                <com.nl.clubbook.ui.view.TitilliumRegularTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="4dp"
                    android:drawableRight="@drawable/ic_club_arrow_right"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="@string/club_info_and_wall"
                    android:textColor="@color/grey_club_title_text_color"
                    android:textSize="@dimen/text_size_micro" />

            </LinearLayout>

            <com.nl.clubbook.ui.view.TitilliumRegularTextView
                android:id="@+id/txtDistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:drawablePadding="4dp"
                android:drawableTop="@drawable/ic_distance_club_details"
                android:text="10 m"
                android:textColor="@color/green"
                android:textSize="@dimen/text_size_small" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="horizontal"
            android:paddingBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="8dp">

            <com.nl.clubbook.ui.view.TitilliumRegularTextView
                android:id="@+id/txtCheckInCount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="16dp"
                android:drawableLeft="@drawable/ic_checked_in_club_details"
                android:drawablePadding="-4dp"
                android:gravity="center_vertical"
                android:lineSpacingExtra="0dp"
                android:textColor="@color/grey_light"
                android:textSize="@dimen/text_size_small"
                android:text="@string/checked_in"/>

            <com.nl.clubbook.ui.view.TitilliumRegularTextView
                android:id="@+id/txtFriendsCount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="16dp"
                android:drawableLeft="@drawable/ic_friends_club_details"
                android:drawablePadding="4dp"
                android:gravity="center_vertical"
                android:lineSpacingExtra="-4dp"
                android:textColor="@color/grey_light"
                android:textSize="@dimen/text_size_small"
                android:text="@string/friends"/>

            <com.nl.clubbook.ui.view.TitilliumRegularTextView
                android:id="@+id/txtCheckIn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:paddingRight="16dp"
                android:paddingLeft="16dp"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                android:text="@string/check_out"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size_medium"
                android:background="@drawable/bg_btn_green"/>

        </LinearLayout>

        <GridView
            android:id="@+id/gridUsers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:numColumns="@integer/grid_users_column_count"
            android:scrollbars="none"/>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />

</RelativeLayout>

