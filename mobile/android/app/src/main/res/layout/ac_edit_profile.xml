<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/holderEditProfileScreen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:visibility="gone">

            <RelativeLayout
                android:id="@+id/selectedImageHolder"
                android:layout_width="fill_parent"
                android:layout_height="230dp"
                android:background="@android:color/black">

                <ImageView
                    android:id="@+id/imgAvatar"
                    android:layout_width="fill_parent"
                    android:layout_height="230dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_avatar_missing" />

                <com.nl.clubbook.ui.view.HelveticaRegularTextView
                    android:id="@+id/txtSetAsDefault"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="16dp"
                    android:background="@color/green_light_semitransparent"
                    android:paddingBottom="8dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="8dp"
                    android:text="@string/set_as_default"
                    android:textColor="@android:color/white"
                    android:visibility="gone"/>

                <com.nl.clubbook.ui.view.HelveticaRegularTextView
                    android:id="@+id/txtDeleteImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="8dp"
                    android:layout_marginRight="16dp"
                    android:background="@color/red_light_semitransparent"
                    android:paddingBottom="8dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="8dp"
                    android:text="@string/delete"
                    android:textColor="@android:color/white"
                    android:visibility="gone" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/imgAddNewPhoto"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_add_photo" />

                <com.nl.clubbook.ui.view.HorizontalListView
                    android:id="@+id/listUserPhotos"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:layout_alignParentBottom="true"
                    android:background="@android:color/white"/>

            </LinearLayout>

            <com.nl.clubbook.ui.view.HelveticaRegularEditText
                android:id="@+id/editName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="4dp"
                android:hint="@string/first_name"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:textColor="@color/grey" />

            <com.nl.clubbook.ui.view.HelveticaRegularEditText
                android:id="@+id/editBirthDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:clickable="true"
                android:focusable="false"
                android:hint="@string/birthday"
                android:inputType="date"
                android:minHeight="48dp"
                android:textColor="@color/grey" />

            <Spinner
                android:id="@+id/spinGender"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:inputType="textPersonName"
                android:minHeight="48dp" />

            <Spinner
                android:id="@+id/spinCountry"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:inputType="textPersonName"
                android:minHeight="48dp" />

            <com.nl.clubbook.ui.view.HelveticaRegularEditText
                android:id="@+id/editAboutMe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:hint="@string/bio"
                android:inputType="textMultiLine"
                android:maxLines="10"
                android:minHeight="48dp"
                android:minLines="2"
                android:scrollbars="vertical"
                android:gravity="center_vertical"
                android:textColor="@color/grey"/>

            <com.nl.clubbook.ui.view.HelveticaBoldTextView
                android:id="@+id/txtSave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:background="@drawable/bg_btn_violet_light"
                android:gravity="center"
                android:text="@string/save"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size_medium" />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />

    </RelativeLayout>
</ScrollView>