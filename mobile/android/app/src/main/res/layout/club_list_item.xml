<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_selector"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/main_area"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgAvatar"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:contentDescription="@string/club_avatar_content_description"
            android:focusable="false" />


        <com.nl.clubbook.ui.view.TitilliumBoldTextView
            android:id="@+id/txtClubTitle"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:maxLines="2"
            android:text="Club name"
            android:textColor="@color/main_background_color"
            android:textSize="@dimen/text_size_medium"
            android:textStyle="bold"
            android:gravity="center_vertical"/>


        <com.nl.clubbook.ui.view.TitilliumBoldTextView
            android:id="@+id/txtCheckIn"
            android:layout_width="95dp"
            android:layout_height="fill_parent"
            android:background="@drawable/checkin_button"
            android:text="Check in"
            android:textColor="@color/checkin_button_color"
            android:textSize="@dimen/text_size_16"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/relativeLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_background_light_color"
        android:focusable="false">

        <com.nl.clubbook.ui.view.TitilliumBoldTextView
            android:id="@+id/distance_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:text="7,3 km"
            android:textSize="@dimen/text_size_16"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:drawableLeft="@drawable/icon_clubdscr_map"
            android:gravity="center_vertical"/>

        <com.nl.clubbook.ui.view.TitilliumBoldTextView
            android:id="@+id/people_count"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:text="10"
            android:textSize="@dimen/text_size_16"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:drawableLeft="@drawable/icon_clubdscr_users"
            android:gravity="center_vertical"
            android:layout_marginLeft="12dp"/>
    </LinearLayout>

</LinearLayout>
