<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/profile_selector"
    android:focusable="false"
    android:focusableInTouchMode="false"
    android:orientation="vertical">

    <!--need two "root" layout for correct display Check In btn on club screen
                                                                   31.10.2014 -->

    <com.nl.clubbook.ui.view.SquareRelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgAvatar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_avatar_unknown" />

        <TextView
            android:id="@+id/txtFriendIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/ic_friend_indicator"
            android:paddingBottom="4dp"
            android:paddingRight="4dp"
            android:visibility="gone" />

    </com.nl.clubbook.ui.view.SquareRelativeLayout>

</LinearLayout>