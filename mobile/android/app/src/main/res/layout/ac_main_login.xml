<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/main_background_color"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <com.nl.clubbook.ui.view.HelveticaRegularTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawableTop="@drawable/ic_logo"
            android:gravity="center"
            android:text="@string/splash_intro"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/text_size_medium"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <com.nl.clubbook.ui.view.HelveticaBoldTextView
            android:id="@+id/txtLoginFacebook"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_btn_blue"
            android:text="@string/sing_in_with_facebook"
            android:layout_marginBottom="8dp"
            android:textSize="@dimen/text_size_medium"
            android:textColor="@android:color/white"
            android:drawableLeft="@drawable/ic_sign_up_by_facebook"
            android:gravity="center"
            android:paddingLeft="4dp"
            android:paddingRight="48dp"/>

        <com.nl.clubbook.ui.view.HelveticaRegularTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/we_dont_post_anything_to_facebook"
            android:gravity="center"
            android:textSize="@dimen/text_size_small"
            android:textColor="@android:color/white"
            android:layout_marginBottom="12dp"/>

        <com.nl.clubbook.ui.view.HelveticaBoldTextView
            android:id="@+id/txtRegWithEmail"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_btn_violet"
            android:text="@string/sign_up_by_email"
            android:layout_marginBottom="12dp"
            android:textSize="@dimen/text_size_medium"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"/>

        <com.nl.clubbook.ui.view.HelveticaBoldTextView
            android:id="@+id/txtLogin"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_btn_violet"
            android:text="@string/log_in"
            android:gravity="center"
            android:textSize="@dimen/text_size_medium"
            android:textColor="@android:color/white"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:layout_marginBottom="24dp"/>

        <com.nl.clubbook.ui.view.HelveticaRegularTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/by_signing_into_clubook_you_agree_with_the"
            android:gravity="center"
            android:textSize="@dimen/text_size_small"
            android:textColor="@android:color/white"/>

        <com.nl.clubbook.ui.view.HelveticaBoldTextView
            android:id="@+id/txtTermsOfService"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/terms_of_service"
            android:gravity="center"
            android:textSize="@dimen/text_size_small"
            android:textColor="@android:color/white"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"/>
    </LinearLayout>

</LinearLayout>
