<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/main_background_color</item>
        <item name="colorPrimaryDark">@color/main_background_color</item>

        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowActionModeOverlay">true</item>

        <item name="actionModeBackground">@color/bg_action_mode</item>
    </style>

    <style name="AppBlackTheme" parent="@style/AppTheme">
        <item name="colorPrimary">@android:color/black</item>
        <item name="colorPrimaryDark">@android:color/black</item>
    </style>

    <style name="ThemeNoActionBar" parent="@style/Theme.AppCompat.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="add_friend_button">
        <item name="android:text">@string/add_friend</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="EditTextAppThemeWhite" parent="android:Widget.EditText">
        <item name="android:background">@drawable/apptheme_edit_text_holo_light_white</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="GreenButton">
        <item name="android:background">@drawable/bg_btn_green</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">@dimen/btn_check_in_left_right_padding</item>
        <item name="android:paddingRight">@dimen/btn_check_in_left_right_padding</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:text">@string/check_in</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>