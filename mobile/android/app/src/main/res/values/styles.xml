<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <!--<item name="android:actionBarStyle">@style/AppActionBar</item>-->
        <!--<item name="actionBarStyle">@style/AppActionBar</item>-->
    </style>

    <style name="AppActionBar" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">@color/main_background_menu_color</item>
        <item name="android:titleTextStyle">@style/TitleTextStyle</item>

        <item name="titleTextStyle">@style/TitleTextStyle</item>
    </style>

    <style name="TitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/title</item>
    </style>



    <!--used for fragments-->
    <style name="sign_in_input">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="image_title">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:background">#99000000</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">2</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18dp</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="social_button">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:textColor">@color/sort_color</item>
        <item name="android:textSize">12dp</item>
    </style>

    <!-- used on main login screen for all 3 buttons -->
    <style name="main_login_button">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="chat_button">
        <item name="android:textColor">#ffffff</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="default_button">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="default_text_input">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">16dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="avatar_btn">
        <item name="android:textColor">#FFFDDD</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="main_button">
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/checkin_button_color</item>
    </style>

