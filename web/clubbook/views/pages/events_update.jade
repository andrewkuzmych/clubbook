extends ../layout

block content
  h3.page-title
    | Events
  .page-bar
    ul.page-breadcrumb
      li
        i.fa.fa-home
        a(href='/venue/events_create') Events
  .row
    .col-md-12
      div.portlet-body.form
        form#form_update_news.form-horizontal(method="post", role="form")
          .form-actions.top.right
            .row
              .col-md-offset-3.col-md-9
                button.btn.green(type='submit') Submit
                a.btn.default(href="/venue/#{type}/events/#{id}", style="margin-left:5px;") Cancel
          .form-body
              .alert.alert-danger.display-hide
                button.close(data-close='alert')
                | You have some form errors. Please check below.
              .alert.alert-success.display-hide
                button.close(data-close='alert')
                | Your form validation is successful!
              
              if has_error
                div.alert.alert-danger.display-hide(style="display: block;")
                  button.close(data-close="alert")
                  | Incorrect data!!!
              .form-group
                  label.col-md-3.control-label Cover Image
                  .col-md-4
                   
                    table.table
                      if events.photos
                        for photo in events.photos
                            tr
                              td(style="vertical-align: middle;")
                                img.events_image(border='0', src='#{photo}', height='200')
                              td(style="vertical-align: middle;")
                                a.btn.red.delete delete
                     
                    div.fileUpload.btn.btn-default
                      span Upload
                      !=cloudinary.uploader.image_upload_tag('image', {html: { class: "upload", tag:"upload_images" }})
                    div#upload_images_progress
                      div.bar(style="width:0%;height:18px;background: green;")
                    input(type="hidden", name="events_images", value="#{events.photos?events.photos.join():''}")
              .form-group
                label.control-label.col-md-3 Name
                  span.required *
                .col-md-4
                  .input-icon.right
                    i.fa
                    input.form-control(type='text', placeholder='Enter events title', name="title", value="#{events.title?events.title:''}")

              .form-group.last
                label.col-md-3.control-label Description
                  span.required *
                .col-md-4
                  .input-icon.right
                    i.fa
                    textarea.form-control(rows="5", placeholder="Enter events description", name="description") #{events.description?events.description:''}
              .form-group
                label.control-label.col-md-3 Share
                .col-md-4
                  .input-icon.right
                    i.fa
                    input.form-control(type='text', placeholder='Enter URL', class="aaa", name="share", value="#{events.share?events.share:''}")
              .form-group
                label.control-label.col-md-3 Buy tickets
                .col-md-4
                  .input-icon.right
                    i.fa
                    input.form-control(type='text', placeholder='Enter URL', name="buy_tickets", value="#{events.buy_tickets?events.buy_tickets:''}")
              .form-group.events
                .form-group
                  label.control-label.col-md-3 Location Name
                    span.required *
                  .col-md-4
                    .input-icon.right
                      i.fa
                      input.form-control.location(type='text', placeholder='Enter name', name="loc_name", value="#{events.loc_name?events.loc_name:''}")
                .form-group
                  label.col-md-3.control-label Address
                    span.required *
                  .col-md-5
                    .input-icon.right
                      i.fa
                      input.form-control.location#select_address(type="text", placeholder="Address", name="events_address", value="#{events.address?events.address:''}")
                      input(type="hidden", name="lat", value="#{events.loc?events.loc.lat:''}")
                      input(type="hidden", name="lng", value="#{events.loc?events.loc.lon:''}")
                      div#location_image.map_image(style="height:150px;")
                .form-group
                  label.control-label.col-md-3 Start
                    span.required *
                  .col-md-3
                    .input-group
                      .input-group.date.date-picker.start_d(data-date-format='dd-mm-yyyy')
                        input.form-control(type='text', name="start_date", value="#{start_date_?start_date_:data_time}" readonly)
                        span.input-group-btn
                          button.btn.default.date-set(type='button')
                            i.fa.fa-calendar
                  .col-md-3
                    .input-group
                      input.form-control.timepicker.timepicker-no-seconds.start_t(type='text' name='start_time', data-default-time="", value="#{start_time_?start_time_:'22:00'}" readonly)
                      span.input-group-btn
                        button.btn.default(type='button')
                            i.fa.fa-clock-o
                .form-group
                  label.control-label.col-md-3 End
                  .col-md-3
                    .input-group
                      .input-group.date.date-picker.end_d(data-date-format='dd-mm-yyyy')
                        input.form-control.end_form(type='text', name="end_date", value="#{end_date_?end_date_:''}")
                        span.input-group-btn
                          button.btn.default.date-set(type='button')
                            i.fa.fa-calendar
                  .col-md-3
                    .input-group
                      input.form-control.timepicker.timepicker-no-seconds.end_t(type='text', name='end_time', data-default-time="", value="#{end_time_?end_time_:''}")
                      span.input-group-btn
                        button.btn.default(type='button')
                            i.fa.fa-clock-o
            .form-actions.right
              .row
                .col-md-offset-3.col-md-9
                  button.btn.green(type='submit') Submit
                  a.btn.default(href="/venue/#{type}/events/#{id}", style="margin-left:5px;") Cancel

block scripts
  script(type="text/javascript", src="http://maps.googleapis.com/maps/api/js?key=AIzaSyDWlaBHVehLQeKiXQXbguAFIg6k-2Jk3Vw&sensor=false&libraries=places&language=#{locale}")
  script(type="text/javascript", src="/assets/javascripts/jquery.geocomplete.min.js")
  script(src="/assets/admin/pages/scripts/update_events.js", type='text/javascript')
  script(src='/assets/plugins/bootstrap-datepicker/js/bootstrap-datepicker.js', type='text/javascript')
  script(type="text/javascript")
    // Configure Cloudinary
    $.cloudinary.config({ api_key: '!{api_key}', cloud_name: '!{cloud_name}' });
    $('[tag=upload_images].cloudinary-fileupload').bind('fileuploadstart', function(e){
      //$('.preview').html('Upload started...');
      $('#upload_images_progress .bar').css('width', '0%');
    });


    $('[tag=upload_images].cloudinary-fileupload').bind('fileuploadprogress', function(e, data) { 
      $('#upload_images_progress .bar').css('width', Math.round((data.loaded * 100.0) / data.total) + '%'); 
    });
    // Upload finished
    $('[tag=upload_images].cloudinary-fileupload').bind('cloudinarydone', function(e, data){
      $( "table.table" ).prepend( "<tr><td style='vertical-align: middle;'><img class='events_image' src='" + $.cloudinary.url(data.result.public_id) + "' height='200'></td><td style='vertical-align: middle;'><a class='btn red delete'>delete</a></td></tr>");
      $('#upload_images_progress .bar').css('width', '0%');
      updateClubImages()
      return true;
    });

    $(".delete").live("click", function(){
      $(this).closest('tr').remove();  
      updateClubImages();
    });

    function updateClubImages() {
      $('[name=events_images]').val($('img.events_image').map(function() { return this.src; }).get().join());
    }
    $(function () {

      if("#{type}" == "dj"){
        $('.location').attr('readonly', false);
      }
      else{
        $('.location').attr('readonly', true);
      }

      $('.date-picker').datepicker({
        autoclose: true
      });
      $('.start_d').datepicker('setStartDate',"#{data_time}");
      $('.end_d').datepicker('setStartDate',$('.start_d').datepicker('getFormattedDate'));

    });

    var geocomplete_options;

    if ($("#select_address").length > 0) {
      geocomplete_options = {
        map: "#location_image",
        markerOptions: {
          draggable: true
        },
        details: "form"
      };

      if ($("input[name=lat]").val() && $("input[name=lng]").val()) {
        geocomplete_options["location"] = [$("input[name=lat]").val(), $("input[name=lng]").val()];
      }
      $("#select_address").geocomplete(geocomplete_options);
      $("#select_address").bind("geocode:dragged", function(event, latLng) {
        console.log(latLng);
        
        $("input[name=lat]").val(latLng.lat());
        return $("input[name=lng]").val(latLng.lng());
      });
    }

    FormValidation.init();
    ComponentsPickers.init();

