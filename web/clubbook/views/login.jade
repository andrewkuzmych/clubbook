    .content
      //
         BEGIN LOGIN FORM 
      form.login-form(action='/login', method='post')
        h3.form-title Login to your account

        if (typeof(error) !== 'undefined')
          .alert.alert-danger.display-hide(style="display: block;")
            button.close(data-close="alert")
            span login or password is incorrect
        
        .form-group
          //
            ie8, ie9 does not support html5 placeholder, so we just show field title for that
          label.control-label.visible-ie8.visible-ie9 Username
          .input-icon
            i.fa.fa-user
            input.form-control.placeholder-no-fix(type='text', autocomplete='off', placeholder='Username', name='username')
        .form-group
          label.control-label.visible-ie8.visible-ie9 Password
          .input-icon
            i.fa.fa-lock
            input.form-control.placeholder-no-fix(type='password', autocomplete='off', placeholder='Password', name='password')
        .form-actions
          label.checkbox
            input(type='checkbox', name='remember', value='1')
            | Remember me
          button.btn.green.pull-right(type='submit')
            | Login
            i.m-icon-swapright.m-icon-white
        .forget-password
          h4 Forgot your password ?
          p
            | no worries, click
            a#forget-password(href='javascript:;')
              | here
            | to reset your password.
      // END LOGIN FORM 
